{
	"name": "re-search",
	"displayName": "re-search",
	"description": "Transform search query",
	"author": "Dmitri Granetchi",
	"license": "MIT",
	"version": "0.0.2",
	"publisher": "profelis",
	"repository": {
		"type": "git",
		"url": "https://github.com/profelis/re-search"
	},
	"engines": {
		"vscode": "^1.32.0"
	},
	"activationEvents": [
		"onCommand:re-search.search"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"properties": {
				"re-search.patterns": {
					"type": "object",
					"examples": [
						{
							"*": {
								"replacement": ".*",
								"isRegex": true,
								"isCaseSensitive": false,
								"matchWholeWord": false
							}
						},
						{
							"/</{0,1}([A-Za-z][A-Za-z0-9]*)/{0,1}>/": {
								"replacement": "</{0,1}$1/{0,1}>",
								"isRegex": true,
								"stopMatching": true
							}
						}
					],
					"description": "Substitution patterns",
					"scope": "window"
				}
			}
		},
		"commands": [
			{
				"command": "re-search.search",
				"title": "re-search: Search"
			}
		],
		"keybindings": [
			{
				"command": "re-search.search",
				"key": "ctrl+alt+shift+f"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.32.0",
		"@typescript-eslint/eslint-plugin": "^3.0.2",
		"@typescript-eslint/parser": "^3.0.2",
		"eslint": "^7.1.0",
		"typescript": "^4.0.2"
	}
}
